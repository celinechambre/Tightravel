<div class="container">

<div class="row">
    
  <div class="col-12 col-lg-6">
    <% @articles.each do |article| %>
    <%= cl_image_tag article.photos[0].key, height: 300, width: 400, crop: :fill, class: "" %>
      <h5 class=""><%= article.title %></h5>
      <p class=""><%= article.description %></p>
      <%= link_to "", article_path(article) %>
    <% end %>
  </div>
</div>

</div>

