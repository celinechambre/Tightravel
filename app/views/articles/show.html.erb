<div class="show-banner">
        <%= cl_image_tag @article.photos[0].key, height: 600, width: 1000, crop: :fill, class: "img-fluid" %>

  <div class="show-banner-text">
    <h1><%= @article.title %></h1>
    <h3><%= @article.location %></h3>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-10 col-sm-offset-1">
      <div class="container">
        <div class="row mx-auto mt-5">
          <div class="col-12 col-lg-6  mr-5">
            <p class="text-center"><%= @article.description %></p>
          </div>
          <div class="col-12 col-lg-5">
            <p><%= cl_image_tag @article.photos[1].key, height: 400, width: 450, crop: :fill %></p>
            <p><%= cl_image_tag @article.photos[2].key, height: 400, width: 450, crop: :fill %></p>
          </div>
        </div>
      </div>


      <%= cl_image_tag @article.photos[3].key, height: 300, width: 400, crop: :fill %>
      <%= cl_image_tag @article.photos[4].key, height: 300, width: 400, crop: :fill %>

<div class="container d-flex mt-4 mr-2">
      <%= link_to 'Edit', edit_article_path, class: "small-button" %>
      <%= link_to 'Delete', article_path, method: :delete, data: {confirm: "Are you sure?"}, class: "small-button" %>
      <%= link_to "Back to our articles", articles_path, class: "small-button" %>
      <%= link_to "Back to home page", root_path, class: "small-button" %>
</div>
    </div>
  </div>
</div>