<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-10 col-sm-offset-1">
      <h1><%= @article.title %></h1>
      <table class="table table-bordered">
        <tbody>
          <tr>
            <th scope="row">Location</th>
            <td><%= @article.location %></td>
          </tr>
          <tr>
            <th scope="row">Description</th>
            <td><%= @article.description %></td>
          </tr>
        </tbody>
      </table>
      <%= link_to 'Edit', edit_article_path %>
      <%= link_to 'Delete', article_path, method: :delete, data: {confirm: "Are you sure?"} %>
      <%= link_to "Back to our articles", articles_path %>
      <%= link_to "Back to home page", root_path %>
    </div>
  </div>
</div>