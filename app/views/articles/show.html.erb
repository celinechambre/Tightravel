<div class="show-banner">
        <%= cl_image_tag @article.photos[0].key, height: 600, width: 1000, crop: :fill, class: "img-fluid" %>

  <div class="show-banner-text">
    <h1><%= @article.title %></h1>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-10 col-sm-offset-1">
      <%= cl_image_tag @article.photos[0].key, height: 300, width: 400, crop: :fill %>
      <table class="table table-bordered">
        <tbody>
          <tr>
            <th scope="row">Location</th>
            <td><%= @article.location %></td>
          </tr>
          <tr>
            <th scope="row">Description</th>
            <td><%= @article.description %></td>
          </tr>
        </tbody>
      </table>
      <%= cl_image_tag @article.photos[1].key, height: 300, width: 400, crop: :fill %>
      <%= cl_image_tag @article.photos[2].key, height: 300, width: 400, crop: :fill %>
      <%= cl_image_tag @article.photos[3].key, height: 300, width: 400, crop: :fill %>
      <%= cl_image_tag @article.photos[4].key, height: 300, width: 400, crop: :fill %>

      <%= link_to 'Edit', edit_article_path %>
      <%= link_to 'Delete', article_path, method: :delete, data: {confirm: "Are you sure?"} %>
      <%= link_to "Back to our articles", articles_path %>
      <%= link_to "Back to home page", root_path %>

    </div>
  </div>
</div>